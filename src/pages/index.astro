---
import BaseLayout from '../layouts/BaseLayout.astro';
import Greeting from '../components/Greeting';
const pageTitle = "Inicio";
---
<BaseLayout pageTitle={pageTitle}>
  <section class="sec">
    <h2 class="titulo1">
      <strong>Bienvenido a mi blog.</strong>
    </h2>

    <div class="header tooltip">
      <div class="photo">
          <img src="../13.gif" alt="imagen perro" loading="lazy"/>
      
            <span class="tooltiptext">¡Saludos visitante!</span>
          
      </div>
    </div>

    <h3 class="titulo1">
      <Greeting client:load messages={["Hej", "Hallo", "Hola", "Habari",'Hi','Ciao', 'Здравствуйте (Zdravstvuyte)', '你好 (Nǐ hǎo)', 'こんにちは (Konnichiwa)', '안녕하세요 (Annyeonghaseyo)','مرحبا (Marhabaan)', ' नमस्ते (Namaste)', 'Merhaba', ' Cześć', 'Ahoj', 'Szia', 'Salut', ' Γειά σου (Ya sou)', 'שלום (Shalom)']} />
    </h3><br>
  </section>  
</BaseLayout>

<style>
  .sec{
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-items: center;
  }
  .titulo1{
    width: auto;
    height: auto;
    text-align: center;
    background-color: #4d4747;
    padding: 10px 10px;
    border-radius: 15px;
    border: solid 2px #ff9776;
    box-shadow: 0 0 5px rgba(10, 10, 10, 0.7);
    color: white;
  }

  .header img{
    width: 85px;
    height: 85px;
    background-color: white;
    border-radius: 50%;
    border: solid 4px #ff9776;
    box-shadow: 0 0 5px rgba(10, 10, 10, 0.7);
  }

   /*Styles of tooltip*/
   .tooltip {
  position: relative;
  display: inline-block;
  }

.tooltip .tooltiptext {
  /*visibility: hidden;*/
  width: 120px;
  background-color: #4d4747;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;
  /* Posicionamiento del tooltip */
  position: absolute;
  z-index: 1;
  bottom: 10%;
  left: 150%;
  margin-left: -60px;
  padding: 3px;
  border: 2px solid #ff9776;
  opacity: 0;
  animation: animado 6s infinite ease; /*Duración de la animación: 6 segundos, se repite infinitamente */
  opacity: 0;
}

/*Animacion del tooltip*/
@keyframes animado {
  0% {
    opacity: 0;
    transition: all 0.5s ease;
  }
  50% {
    opacity: 1;
    transition: all 0.5s ease;
  }
  100% {
    opacity: 0;
    transition: all 0.5s ease;
  }
}
</style>